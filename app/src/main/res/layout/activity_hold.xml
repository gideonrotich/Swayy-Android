<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stores.holdActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mbappe"
        android:elevation="2dp">



        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:background="#ffffff">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/yes">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Post new Advert"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"
                    android:id="@+id/rosal"
                    android:maxLines="1"
                    android:maxWidth="250dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/giddy"
                    android:textSize="18sp">

                </TextView>

            </RelativeLayout>



        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/mbappe"
        android:layout_marginTop="20dp"
        android:layout_marginRight="14dp"
        android:background="#ffffff"
        android:layout_marginLeft="14dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Advert"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/kib">


        </TextView>
        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="18dp"
            android:alpha=".12"
            android:background="#000"
            android:layout_below="@+id/kib" />

        <TextView
            android:id="@+id/password_confirm_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Store Category"
            android:textSize="12sp"

            android:layout_below="@+id/view3"
            android:layout_marginTop="12dp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="20dp">

        </TextView>

        <Spinner
            android:id="@+id/mbele"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_confirm_two"
            android:textSize="16sp"
            android:spinnerMode="dropdown"
            android:textColor="#ffffff"

            android:background="#F3F3F3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="4dp">

        </Spinner>

        <TextView
            android:id="@+id/wapionembele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mbele"
            android:textColorHint="@android:color/black"
            android:textSize="16sp"
            android:visibility="gone"
            android:textColor="@android:color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp">

        </TextView>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnnextkuja"
            android:backgroundTint="#000000"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:visibility="visible"
            android:layout_marginTop="30dp"
            android:layout_below="@id/wapionembele"

            android:layout_marginRight="20dp"
            android:text="NEXT" />

    </RelativeLayout>

</RelativeLayout>